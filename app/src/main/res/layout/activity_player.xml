<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Гайдлайны для «поля» контента: по ~5% слева/справа -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <!-- 0) Тулбар на всю ширину -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/playerToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="?attr/colorOnSurface"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:titleMarginStart="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 1) Обложка — сразу под тулбаром -->
        <!-- обложка -->
        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/playerToolbar"
            android:layout_marginTop="26dp"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_placeholder" />

        <!-- 24dp под обложкой -->
        <TextView
            android:id="@+id/titleText"
            style="@style/TrackNameStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/coverImage"
            android:layout_marginTop="24dp"
            android:text="Title" />

        <!-- 12dp под названием -->
        <TextView
            android:id="@+id/artistText"
            style="@style/TrackArtistStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:layout_marginTop="12dp"
            android:text="Artist" />

        <!-- большая кнопка Play по центру «поля» -->
        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintTop_toBottomOf="@id/artistText"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:background="@drawable/bg_fon_button"
            android:src="@drawable/ic_play_32"
            android:elevation="0dp" />

        <!-- КНОПКИ ПО КРАЯМ ЭКРАНА, по вертикали центр к playBtn -->
        <ImageButton
            android:id="@+id/addToPlaylistBtn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="@id/playBtn"
            app:layout_constraintBottom_toBottomOf="@id/playBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_fon_button"
            android:src="@drawable/ic_add_24"
            android:elevation="0dp" />

        <ImageButton
            android:id="@+id/favBtn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="@id/playBtn"
            app:layout_constraintBottom_toBottomOf="@id/playBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_fon_button"
            android:src="@drawable/ic_favorite_24"
            android:elevation="0dp" />

        <!-- Прогресс воспроизведения -->
        <TextView
            android:id="@+id/progressText"
            style="@style/BottomNavTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playBtn"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="4dp"
            android:text="00:00"/>

        <!-- Параметры трека: длительность, альбом, год, жанр, страна -->
        <TextView
            android:id="@+id/durationLabel"
            style="@style/PlayerTrackInfoColumnsStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progressText"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="30dp"
            android:text="@string/label_duration"/>

        <TextView
            android:id="@+id/durationValue"
            style="@style/PlayerTrackInfoResultStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/durationLabel"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:text="00:30"/>

        <TextView
            android:id="@+id/albumLabel"
            style="@style/PlayerTrackInfoColumnsStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/durationLabel"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/albumValue"
            android:layout_marginTop="16dp"
            android:text="@string/label_album"/>

        <TextView
            android:id="@+id/albumValue"
            style="@style/PlayerTrackInfoResultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/albumLabel"
            app:layout_constraintStart_toEndOf="@id/albumLabel"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Album"/>

        <TextView
            android:id="@+id/yearLabel"
            style="@style/PlayerTrackInfoColumnsStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/albumLabel"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="16dp"
            android:text="@string/label_year"/>

        <TextView
            android:id="@+id/yearValue"
            style="@style/PlayerTrackInfoResultStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/yearLabel"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:text="1965"/>

        <TextView
            android:id="@+id/genreLabel"
            style="@style/PlayerTrackInfoColumnsStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/yearLabel"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="16dp"
            android:text="@string/label_genre"/>

        <TextView
            android:id="@+id/genreValue"
            style="@style/PlayerTrackInfoResultStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/genreLabel"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:text="Rock"/>

        <TextView
            android:id="@+id/countryLabel"
            style="@style/PlayerTrackInfoColumnsStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/genreLabel"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:layout_marginTop="16dp"
            android:text="@string/label_country"/>

        <TextView
            android:id="@+id/countryValue"
            style="@style/PlayerTrackInfoResultStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/countryLabel"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            android:text="United Kingdom"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
