<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Определяем тёмную тему, но с тем же именем Theme.PlaylistMaker -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвета для тёмной темы -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Переопределение базовых цветов для тёмной темы -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>